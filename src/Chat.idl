module chat
{
    interface Chat
    {
        string connect();
        void sendMessage(in string token, in string message);
        string receiveMessage(in string token);
        boolean createChatRoom(in string token, in string name);
        string listChatRooms(in string token);
        boolean joinChatRoom(in string token, in string name);
        boolean leaveChatRoom(in string token);
        boolean changeName(in string token, in string name);
        string getName(in string token);
    };
};